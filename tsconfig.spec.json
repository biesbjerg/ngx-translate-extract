{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "es2020",
        "target": "es2020",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "inlineSourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
    }, 
    "include": ["tests/**/*.ts", "src/**/*.ts"]
}
